<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    tools:context=".navigation_fragments.home_fragment"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_marginTop="90dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-10dp"
            android:fontFamily="@font/archivo"
            android:text="MBS Connects"
            android:textColor="@color/black"
            android:textSize="35sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        <androidx.cardview.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@color/white"
            android:elevation="6dp"
            app:cardCornerRadius="10dp">

            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:backgroundTint="#FBD745"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/rate_us"
                    app:tint="#ffff"></ImageView>

            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rate Us"
                android:layout_gravity="center"></TextView>
        </LinearLayout>
        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        <androidx.cardview.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:background="@color/white"
            android:elevation="6dp"
            app:cardCornerRadius="10dp">

            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:backgroundTint="#FF9970"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/call"
                    app:tint="#ffff"></ImageView>

            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center"></TextView>
        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        <androidx.cardview.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:background="@color/white"
            android:elevation="6dp"
            app:cardCornerRadius="10dp">

            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:backgroundTint="#569EFD"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/support"
                    app:tint="#ffff"></ImageView>

            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Support"
            android:layout_marginLeft="12dp"
            android:layout_gravity="center"></TextView>
    </LinearLayout>
        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        <androidx.cardview.widget.CardView
            android:id="@+id/about_us"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:background="@color/white"
            android:elevation="6dp"
            app:cardCornerRadius="10dp">

            <androidx.cardview.widget.CardView

                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:backgroundTint="#52C3FF"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/about"
                    app:tint="#ffff"></ImageView>

            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>
    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About"
        android:layout_marginLeft="15dp"
        android:layout_gravity="center"></TextView>
</LinearLayout>

    </LinearLayout>


   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Courses"
       android:layout_marginTop="20dp"
       ></TextView>

   <HorizontalScrollView
       android:scrollbarSize="0dp"
       android:layout_marginTop="5dp"
       android:layout_width="match_parent"
       android:layout_height="50dp"
       >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           >
           <androidx.cardview.widget.CardView
               android:foreground="?android:attr/selectableItemBackground"
               android:clickable="true"
               android:id="@+id/bca_btn"
               android:layout_width="80dp"
               android:layout_height="40dp"
               android:layout_gravity="center"
               android:elevation="6dp"
               app:cardCornerRadius="20dp">
               <TextView

                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="BCA"
                   android:textSize="18sp"
                   android:layout_gravity="center"
                   ></TextView>

           </androidx.cardview.widget.CardView>
           <androidx.cardview.widget.CardView
               android:foreground="?android:attr/selectableItemBackground"
               android:clickable="true"
               android:id="@+id/bba_btn"
               android:layout_width="80dp"
               android:layout_height="40dp"
               android:layout_gravity="center"
               android:elevation="6dp"
               android:layout_marginLeft="10dp"
               app:cardCornerRadius="20dp">
               <TextView

                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="BBA"
                   android:textSize="18sp"
                   android:layout_gravity="center"
                   ></TextView>

           </androidx.cardview.widget.CardView>
           <androidx.cardview.widget.CardView
               android:foreground="?android:attr/selectableItemBackground"
               android:clickable="true"
               android:id="@+id/bcom_btn"
               android:layout_width="80dp"
               android:layout_height="40dp"
               android:layout_gravity="center"
               android:elevation="6dp"
               android:layout_marginLeft="10dp"
               app:cardCornerRadius="20dp">
               <TextView

                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="BCOM"
                   android:textSize="18sp"
                   android:layout_gravity="center"
                   ></TextView>

           </androidx.cardview.widget.CardView>
           <androidx.cardview.widget.CardView
               android:foreground="?android:attr/selectableItemBackground"
               android:clickable="true"
               android:id="@+id/mcom_btn"
               android:layout_width="80dp"
               android:layout_height="40dp"
               android:layout_gravity="center"
               android:elevation="6dp"
               android:layout_marginLeft="10dp"
               app:cardCornerRadius="20dp">
               <TextView

                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="MCOM"
                   android:textSize="18sp"
                   android:layout_gravity="center"
                   ></TextView>

           </androidx.cardview.widget.CardView>
           <androidx.cardview.widget.CardView
               android:foreground="?android:attr/selectableItemBackground"
               android:clickable="true"
               android:id="@+id/bsc_btn"
               android:layout_width="80dp"
               android:layout_height="40dp"
               android:layout_gravity="center"
               android:elevation="6dp"
               android:layout_marginLeft="10dp"
               app:cardCornerRadius="20dp">
               <TextView

                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="BSc"
                   android:textSize="18sp"
                   android:layout_gravity="center"
                   ></TextView>

           </androidx.cardview.widget.CardView>
           <androidx.cardview.widget.CardView
               android:layout_width="80dp"
               android:layout_height="40dp"
               android:foreground="?android:attr/selectableItemBackground"
               android:clickable="true"
               android:id="@+id/msc_btn"
               android:layout_gravity="center"
               android:elevation="6dp"
               android:layout_marginLeft="10dp"
               app:cardCornerRadius="20dp">
               <TextView

                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Msc"
                   android:textSize="18sp"
                   android:layout_gravity="center"
                   ></TextView>

           </androidx.cardview.widget.CardView>

       </LinearLayout>
   </HorizontalScrollView>

   <TextView
       android:layout_marginTop="20dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="All Options"
       ></TextView>

    <ScrollView
        android:scrollbarSize="0dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            >

            <androidx.cardview.widget.CardView

                android:id="@+id/join_class"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                app:cardCornerRadius="10dp">
               <LinearLayout
                   android:layout_marginTop="6dp"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="horizontal"
                   >
                   <ImageView
                       android:layout_marginLeft="10dp"
                       android:layout_width="150dp"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="-5dp"
                       android:src="@drawable/online_class"></ImageView>

                   <LinearLayout

                       android:layout_marginTop="7dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="vertical"
                       >
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Join Online Class"
                           android:textSize="20sp"
                           android:textStyle="bold"
                           android:textColor="@color/text_Color"
                           android:layout_marginLeft="10dp"
                           ></TextView>
                       <TextView
                           android:layout_marginLeft="10dp"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Enter the code provided by the teacher and connect to meeting "
></TextView>
                   </LinearLayout>
               </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:id="@+id/paper_btn"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                app:cardCornerRadius="10dp">
                <LinearLayout
                    android:layout_marginTop="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_marginTop="-30dp"
                        android:src="@drawable/paper"></ImageView>

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Download Paper"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_Color"
                            android:layout_marginLeft="10dp"
                            ></TextView>
                        <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Download the previous year paper in the pdf, request teacher to upload more"
                            ></TextView>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:id="@+id/task"
                android:layout_marginTop="10dp"
                android:layout_width="360dp"
                android:layout_height="100dp"
                app:cardCornerRadius="10dp">
                <LinearLayout
                    android:layout_marginTop="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_marginTop="-30dp"
                        android:src="@drawable/task"></ImageView>

                    <LinearLayout
                        android:layout_marginTop="7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Download Task"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_Color"
                            android:layout_marginLeft="10dp"
                            ></TextView>
                        <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Download the task related to homework, labwork and assignment"
                            ></TextView>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:id="@+id/scheme"
                android:layout_marginTop="10dp"
                android:layout_width="360dp"
                android:layout_height="100dp"
                app:cardCornerRadius="10dp">
                <LinearLayout
                    android:layout_marginTop="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_marginTop="-30dp"
                        android:src="@drawable/scheme"></ImageView>

                    <LinearLayout

                        android:layout_marginTop="7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Download Scheme"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_Color"
                            android:layout_marginLeft="10dp"
                            ></TextView>
                        <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Download the scheme of sessional, semester and class time table "
                            ></TextView>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
               android:id="@+id/result_btn"
                android:layout_marginTop="10dp"
                android:layout_width="360dp"
                android:layout_height="100dp"
                app:cardCornerRadius="10dp">
                <LinearLayout
                    android:layout_marginTop="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_marginTop="-30dp"
                        android:src="@drawable/result"></ImageView>

                    <LinearLayout
                        android:layout_marginTop="7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Download Results"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_Color"
                            android:layout_marginLeft="10dp"
                            ></TextView>
                        <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Enter your roll number provided by the college and download the result"
                            ></TextView>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_marginBottom="65dp"
                android:layout_marginTop="10dp"
                android:layout_width="360dp"
                android:layout_height="100dp"
                app:cardCornerRadius="10dp">
                <LinearLayout
                    android:layout_marginTop="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_marginTop="-30dp"
                        android:src="@drawable/online_lecture"></ImageView>

                    <LinearLayout

                        android:layout_marginTop="7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Recorded Lectures"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_Color"
                            android:layout_marginLeft="10dp"
                            ></TextView>
                        <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Get Access to recorded lectures on youtube playlist and enjoy learning"
                            ></TextView>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>




        </LinearLayout>



    </ScrollView>

</LinearLayout>


