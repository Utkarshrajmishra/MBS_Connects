<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/diagonal_box"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@color/text_Color"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        ></TextView>


    <LinearLayout

        android:id="@+id/homework1"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        >

        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:src="@drawable/homework_pen"
            app:tint="#777575"></ImageView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Download Homework"

            android:textSize="16sp"
            android:textColor="#777575"
            android:layout_marginLeft="15dp"></TextView>




    </LinearLayout>
    <LinearLayout

        android:layout_marginTop="10dp"
        android:id="@+id/labwork1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"

        >

        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/assignment_pen"
            app:tint="#777575"></ImageView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Download Labwork"

            android:textSize="16sp"
            android:textColor="#777575"
            android:layout_marginLeft="15dp"></TextView>




    </LinearLayout>

    <LinearLayout

        android:layout_marginTop="10dp"
        android:id="@+id/assignment1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_marginBottom="20dp"
        >

        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/labwork_pen"
            app:tint="#777575"></ImageView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Download Assignment"

            android:textSize="16sp"
            android:textColor="#777575"
            android:layout_marginLeft="15dp"></TextView>




    </LinearLayout>




</LinearLayout>