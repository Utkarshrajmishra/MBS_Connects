<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    app:cardCornerRadius="10dp"
    android:backgroundTint="@color/bg_color"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:strokeColor="@color/text_Color"
    app:strokeWidth="0.5dp"
    android:layout_marginTop="3dp">



    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_marginTop="1dp"
            android:paddingTop="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:paddingLeft="12dp"
            android:orientation="vertical"
            android:gravity="center_vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Marwar Business School
"
                android:textStyle="bold"
                android:textColor="@color/text_Color"
                ></TextView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/teacheranme"
                android:text="Utkarsah Raj Mishra"

                android:textColor="@color/text_Color"
               ></TextView>



            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/teacheremail2"
                android:text="utkarshrajmishra@gmail.com"

                android:textColor="@color/text_Color"
               ></TextView>





        </LinearLayout>


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/teacherphoto2"
            android:layout_width="30dp"
            android:padding="10dp"
            android:layout_height="80dp"
            android:src="@drawable/teacher_icon"
            android:layout_weight="0.5"
            android:layout_gravity="center_horizontal"></de.hdodenhof.circleimageview.CircleImageView>


    </LinearLayout>


</com.google.android.material.card.MaterialCardView>



